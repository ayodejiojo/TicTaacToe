<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0e0e0"


    android:gravity="center"


    tools:context="com.example.lola.tictactoe.MenuActivity">


    <TextView

        android:id="@+id/iccon1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:layout_marginLeft="4dp"
        android:textSize="40sp"
        android:textColor="#3949AB"
        android:text="Tic"/>

    <TextView
        android:id="@+id/iccon2"
        android:layout_toRightOf="@id/iccon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        android:textSize="40sp"
        android:textColor="#E91E63"
        android:text="Tac"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/iccon3"
        android:layout_toRightOf="@id/iccon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:textSize="40sp"
        android:textColor="#4CAF50"
        android:text="Toe"/>


    <Button
        android:onClick="singleplayer"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_single"
        android:textColor="@android:color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="single player x3"/>

    <Button
        android:onClick="singleplayertwo"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_single2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/button_single"
        android:textColor="#fff"
        android:background="@drawable/round"
        android:text="single player x5"/>

    <Button
        android:onClick="twoplayer"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_two_players"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/round"
        android:textColor="#fff"
        android:layout_below="@id/button_single2"
        android:text="two players x3"/>


    <Button
        android:onClick="twoplayerfive"
        android:textColor="#fff"
        android:background="@drawable/round"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_two_players2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/button_two_players"
        android:text="two players x5" />


    <Button
        android:onClick="exit"
        android:background="@drawable/round"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:id="@+id/exit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/button_two_players2"
        android:text="exit game"/>

</RelativeLayout>
